<% @projects.each do |project| %>
<table>
  <caption>Table</caption>
  
  <thead>
  <!--PROJECTS-->
    <tr onselectstart="return false" onmousedown="return false">
      <th class="done">CAL</th>
      <th colspan="2"><%= project.name %></th>
      <th><%= link_to 'Edit', edit_project_path(project) %></th>
      <th><%= link_to 'Del', project, method: :delete, data: { confirm: 'Are you sure?' } %></th>
    </tr>
    
  </thead>
<!--ADDED TASK********************************************-->
<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <tr>
        <th class="done" style="width: 2px">+</th>  
        <th colspan="3" class="projects">
            <%= f.text_field :name %>
            <!--<input type="text" placeholder="Start typing here to create a task">-->
        </th>
        <th id="submit">
        <%= f.submit %>
           <!-- <input type="submit" value="Add Task">-->
        </th>
    </tr>
  <% end %>
<!--END ADDED TASK********************************************-->-->

    <tbody id="table">
    <% @tasks.each do |task| %>
      <tr>
        <td><%= check_box_tag(:done) %></td>
        <td class="tasks"><%= task.name %></td>
        <td class="move control" onselectstart="return false" onmousedown="return false">move</td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Del', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>
<br><br><br>
<% end %>