<% @projects.each do |project| %>
<table class="table table-hover">
  <thead>
  <!--PROJECTS-->
    <tr onselectstart="return false" onmousedown="return false">
      <th class="done"><span class="glyphicons glyphicons-notes"></span></th>
      <th colspan="2"><%= project.name %></th>
      <%= hidden_field_tag(:projects, project.id) %>
      <th><%= link_to '', edit_project_path(project), class: "icon-pencil" %></th>
      <th><%= link_to '', project, class: "icon-trash", method: :delete, data: { confirm: 'Are you sure?' } %></th>
    </tr>
  </thead>

  <%= render 'form_for_add_task' %> 

  <tbody>
    <%= render 'form_for_filling_project_by_task' %> 
  </tbody>
</table>
<br><br><br>

<% end %>


<%= link_to 'Add ToDoList', new_project_path, class: "btn btn-success", id: "addTDL", title: "Создать новый проэкт" %>

<script type="text/javascript">
  //$('td.move').parent('tr').addClass('styless');
$(document).ready(function() {
    $(".checked").click(function(e) {
      $(this).closest(".forchack").toggleClass('stroked');
    });
});
</script>

